@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    var companyMail = ViewBag.CompanyMail;
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <div class="input-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter Email" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-envelope"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <div class="input-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Enter Password" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-key"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <div class="input-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-key"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <div class="input-group">
                    <input asp-for="Input.FirstName" class="form-control" placeholder="Enter First Name" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-user"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <div class="input-group">
                    <input asp-for="Input.LastName" class="form-control" placeholder="Enter Last Name" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-user"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Address"></label>
                <div class="input-group">
                    <input asp-for="Input.Address" class="form-control" placeholder="Enter Address" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-address-book"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ZipCode"></label>
                <div class="input-group">
                    <input asp-for="Input.ZipCode" class="form-control" placeholder="Enter Zip Code" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-address-book"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.City"></label>
                <div class="input-group">
                    <input asp-for="Input.City" class="form-control" placeholder="Enter City" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-building"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <div class="input-group">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-phone-alt"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success"><i class="fa fa-user-plus"></i> Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}