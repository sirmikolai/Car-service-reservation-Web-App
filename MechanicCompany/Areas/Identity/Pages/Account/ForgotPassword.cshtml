@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    var companyMail = ViewBag.CompanyMail;
}

<h1>@ViewData["Title"]</h1>
<hr />
<h4>Enter your email.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <div class="input-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter Email" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-envelope"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-check-circle"></i> Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
