@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
    var companyMail = ViewBag.CompanyMail;
}

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    You have requested to log in with a recovery code. This login will not be remembered until you provide
    an authenticator app code at log in or disable 2FA and log in again.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RecoveryCode"></label>
                <div class="input-group">
                    <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Enter Code" />
                    <div class="input-group-append">
                        <span class="input-group-text text-secondary font-weight-bold"><i class="fa fa-angle-left"></i></span>
                    </div>
                </div>
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Log in <i class="fa fa-chevron-right"></i></button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
