            </td>
            <td>42-202 Częstochowa</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td>
                <strong>Phone :</strong>
            </td>
            <td>
                @ViewData["UserPhone"]
            </td>
            <td></td>
            <td></td>
