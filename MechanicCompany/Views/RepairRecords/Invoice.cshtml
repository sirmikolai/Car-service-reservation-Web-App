        <tr>
            <td><strong>Car Brand: </strong></td>
            <td>@ViewData["CarBrand"]</td>
            <td><strong>Car Model: </strong></td>
            <td>@ViewData["CarModel"]</td>
        </tr>
        <tr>
            <td><strong>Production Date: </strong></td>
            <td>@ViewData["ProductionDate"]</td>
            <td><strong>Engine: </strong></td>
            <td>@ViewData["Engine"]</td>
        </tr>
        <tr>
            <td><strong>Type of Body: </strong></td>
            <td>@ViewData["TypeOfBody"]</td>
            <td><strong>Registration Number: </strong></td>
            <td>@ViewData["RegistrationNumber"]</td>
        </tr>
    </table>
    <br />
    <hr />
    <br />
    <table class="table" align="center">
        <thead>
            <tr>
                <th>
                    Description
                </th>
                <th>
                    Company
                </th>
                <th>
                    Price
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.PartName)</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PartCompany)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PartCost) $
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PartQuantity)
                    </td>
                    <td>
                        @(Decimal.Parse(item.PartQuantity.ToString()) * Decimal.Parse(item.PartCost.ToString())) $
                    </td>
                </tr>
            }
            <tr>
                <td style="font-style:italic;">
                    <strong>Labor Cost</strong>
                </td>
                <td>
                </td>
                <td>
                    @ViewData["LaborCost"] $
                </td>
                <td>
                    1
                </td>
                <td>
                    @ViewData["LaborCost"] $
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td><strong>Amount:</strong></td>
                <td><strong>@ViewData["AllRepairCost"] $</strong></td>
            </tr>
        </tbody>
    </table>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>