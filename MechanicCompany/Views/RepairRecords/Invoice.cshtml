        </tr>
        <tr>
            <td>
                <strong>Address: </strong>
            </td>
            <td>
                @ViewData["UserAddress"]
            </td>
            <td></td>
            <td></td>
            <td>
                <strong>Address: </strong>
            </td>
            <td>ul. Armii Krajowej 36</td>
            <td></td>
            <td></td>
