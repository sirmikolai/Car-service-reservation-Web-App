@model MechanicCompany.Models.RepairPart
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    Layout = null;
    var companyMail = ViewBag.CompanyMail;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete part</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-5.12.1-web/css/all.css">
</head>
<body style="padding: 5px; overflow-y: auto;">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.Identity.Name == companyMail)
        {
            <h3>Are you sure you want to delete part?</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.RepairRecord)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.RepairRecord.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PartName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PartName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PartCompany)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PartCompany)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PartCost)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PartCost)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PartQuantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PartQuantity)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger"><i class="fa fa-minus-circle"></i> Delete</button> |
                    <a asp-action="Index" class="btn btn-outline-info"><i class="fa fa-chevron-circle-left"></i> Back to parts</a>
                </form>
            </div>
        }
        else
        {
            <h1><i class="fa fa-times-circle" style="color: darkred;"></i> Ooops something gone wrong!</h1>
            <br />
            <div>
                <a class="btn btn-outline-info" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-chevron-circle-left"></i> Go to Home Page</a>
            </div>
        }
    }
    else
    {
        <h1><i class="fa fa-times-circle" style="color: darkred;"></i> Ooops something gone wrong!</h1>
        <br />
        <div>
            <a class="btn btn-outline-info" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-chevron-circle-left"></i> Go to Home Page</a>
        </div>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>